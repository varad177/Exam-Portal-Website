<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>login</title>
    <link rel="stylesheet" href="css/style.css" />
    <script
      src="https://kit.fontawesome.com/b0a4a992bb.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <section id="signup_login">
      <div id="navbar">
        <div id="logo">
          <img src="/public/images/logoo.jpeg" alt="loading image" />
        </div>
        <h1 class="priheading center">WELCOME TO EXAM PORTAL WEBSITE</h1>
      </div>
      
      <div class="formout">
        <div class="formbox">
          <h1 id="title">Sign Up</h1>
          <div class="window">
            <h3><%= title %> </TItle></h3>
            <h3><%= password %></h3>
            <h3><%= email %></h3>
          </div>
          <div class="twoform">

            <form  class="forms" action="/register" method="post">
              <div class="inputgrp">
                <div class="inputfield" id="namefield">
                  <i class="fa-solid fa-user"></i>
                  <input type="text" name="name" placeholder="User Name" />
                </div>
                <div class="inputfield" id="numberfield">
                  <i class="fa-solid fa-envelope"></i>
                  <input type="number"  name="number" placeholder="Your number" />
                </div>
              <div class="inputfield">
                <i class="fa-solid fa-envelope"></i>
                <input type="email" name="email" placeholder="Your Email" />
              </div>
              
              <div class="inputfield">
                <i class="fa-solid fa-lock"></i>
                <input type="password" name="password" placeholder="Password" />
              </div>
              <div class="inputfield">
                <i class="fa-solid fa-lock"></i>
                <input type="password" name="cpassword" placeholder="Confirm Password" />
              </div>
              <p><a href="">Forgot Password</a></p>
            </div>
            
            <div class="btn">
              <button class="submitbtn" type="submit">Sign Up</button>
              <!-- <input type="checkbox" id="openlogin">
                <label for="openlogin" class="loginimg">hii</label> -->
                <!-- <button class="submitbtn" type="submit"  class="disable">Login</button> -->
                 
            </div>
          </form>
          <div>
            <form action="/login" class="forms"  method="post">
              <!-- <div id="loginform"> -->
                <div class="loginform">
                  <div class="inputfield">
                    <i class="fa-solid fa-envelope"></i>
                    <input type="email" name="email" placeholder="Your Email" />
                  </div>
                  
                  <div class="inputfield">
                    <i class="fa-solid fa-lock"></i>
                    <input type="password" name="password" placeholder="Password" />
                  </div>
                  <p><a href="">Forgot Password</a></p>
                  <div class="btn">
                    <button class="submitbtn">Login</button>
                    
                  </div>
                </div>
                
                
              </form>
            </div>
            </div>
          </div>
        
      </div>
    </section>

    
  </body>
</html>
